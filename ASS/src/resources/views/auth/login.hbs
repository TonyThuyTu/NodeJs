<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
    <h2 class="mb-3 text-center">Login</h2>

    <!-- Hiển thị thông báo lỗi chung -->
    {{#if errorMessage}}
      <div class="alert alert-danger text-center">{{errorMessage}}</div>
    {{/if}}

    <!-- Login Form -->
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input 
          type="email" 
          class="form-control {{#if errors.email}}is-invalid{{/if}}" 
          id="email" 
          name="email" 
          placeholder="Enter your email" 
          required
        >
        {{#if errors.email}}
          <div class="text-danger">{{errors.email}}</div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input 
          type="password" 
          class="form-control {{#if errors.password}}is-invalid{{/if}}" 
          id="password" 
          name="password" 
          placeholder="Enter your password" 
          required
        >
        {{#if errors.password}}
          <div class="text-danger">{{errors.password}}</div>
        {{/if}}
      </div>

      <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>

    <!-- Extra Links -->
    <div class="mt-3 d-flex justify-content-between">
      <a href="/forgotpass" class="text-muted">Forgot Password?</a>
      <a href="/signup" class="text-primary">Create an Account</a>
    </div>
  </div>
</div>
