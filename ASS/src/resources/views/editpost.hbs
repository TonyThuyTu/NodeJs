<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h3 class="card-title text-center">Chỉnh sửa bài viết</h3>
      <form action="/post/edit/{{post.postId}}" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Tiêu đề bài viết</label>
          <input type="text" id="title" name="title" class="form-control" value="{{post.title}}" required>
        </div>
        <div class="form-group">
          <label for="image">Hình ảnh hiện tại</label>
          <div class="mb-2">
            <img src="img/beach holiday.jpg" alt="Bài viết" class="img-fluid rounded">
          </div>
          <input type="file" id="image" name="image" class="form-control-file" accept="image/*">
        </div>
        
        <!-- Nút Hủy (bên trái) và Cập nhật (bên phải) -->
        <div class="d-flex justify-content-between">
          <a href="/profile" class="btn btn-secondary">Hủy</a>
          <button type="submit" class="btn btn-primary">Cập nhật bài viết</button>
        </div>
      </form>
    </div>
  </div>
</div>
