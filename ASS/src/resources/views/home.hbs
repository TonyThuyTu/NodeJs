{{#each posts}}
<div class="card mb-4">
  <!-- Card Header: Author and Publish Info -->
  <div class="card-header">
    <h5 class="mb-0">{{this.userId.username}}</h5> <!-- Lấy username từ userId -->
    <small class="text-muted">Published: {{this.createdAt}}</small>
  </div>

  <!-- Card Body: Post Content -->
  <div class="card-body">
    <!-- Post Image -->
    {{#if this.image}}
      <img src="{{this.image}}" alt="Post Image" class="d-block mx-auto" width="auto" height="500px">
    {{/if}}

    <!-- Post Text -->
    <p>{{this.title}}</p>

    <!-- Reactions -->
    <div class="d-flex align-items-center mb-3">
      <button class="btn btn-outline-primary btn-sm mr-2">👍 2.2k</button>
      <button class="btn btn-outline-secondary btn-sm mr-2">💬 200</button>
      <button class="btn btn-outline-success btn-sm">🔄 Share</button>
    </div>
  </div>
</div>
{{/each}}
